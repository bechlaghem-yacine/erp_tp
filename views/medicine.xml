<odoo>
    <!-- Tree view (list of patients) -->
    <record id="view_medicine_tree" model="ir.ui.view">
        <field name="name">medicine.tree</field>
        <field name="model">clinc.medicine</field>
        <field name="arch" type="xml">
            <tree string="medicines">
                        <field name="commercial_name"/>
                        <field name="dci"/>
                        <field name="form"/>
                        <field name="default_dosage"/>

            </tree>
        </field>
    </record>

    <!-- Form view (details of one patient) -->
    <record id="view_medicine_form" model="ir.ui.view">
        <field name="name">medicine.form</field>
        <field name="model">clinc.medicine</field>
        <field name="arch" type="xml">
            <form string="medicine">
                <sheet>
                    <group>
                        <field name="commercial_name"/>
                        <field name="dci"/>
                        <field name="form"/>
                        <field name="default_dosage"/>
                    </group>
                    <notebook>
                    <page string="prescription Lines">
                    <field name="prescription_line_ids">
                        <tree editable="top">
                            <field name="intake_date"/>
                            <field name="dosage"/>
                            <field name="instructions"/>
                            <field name="prescription_id"/>
                        </tree>
                    </field>
                    
                    </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_medicine_search" model="ir.ui.view">
        <field name="name">medicine.search</field>
        <field name="model">clinc.medicine</field>
        <field name="arch" type="xml">
            <search string="Search Medicines">
                <field name="commercial_name"/>
                <field name="dci"/>
                <field name="form"/>

                <filter string="Form: Tablet" name="filter_tablet" domain="[('form', '=', 'tablet')]"/>
            </search>
        </field>
    </record>

    <record id="action_medicine" model="ir.actions.act_window">
        <field name="name">medicines</field>
        <field name="res_model">clinc.medicine</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_medical_root" name="Medical Management"/>
    <menuitem id="menu_medicine" name="medicines" parent="menu_medical_root" action="action_medicine"/>
</odoo>