<odoo>
    <!-- Wizard Form View -->
    <record id="view_create_prescription_wizard" model="ir.ui.view">
        <field name="name">clinc.create.prescription.wizard.form</field>
        <!-- THIS model must match the wizard python _name -->
        <field name="model">clinc.create.prescription.wizard</field>
        <field name="arch" type="xml">
            <form string="Créer une prescription">
                <group>
                    <field name="patient_id" readonly="1"/>
                    <field name="doctor_id"/>
                </group>

                <notebook>
                    <page string="Médicaments">
                        <field name="medicine_line_ids">
                            <tree editable="bottom">
                                <field name="medicine"/>
                                <field name="posologie"/>
                                <field name="date_prise"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button string="Créer" type="object" name="create_prescription" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
