<odoo>
    <record id="view_prescription_tree" model="ir.ui.view">
        <field name="name">prescription.tree</field>
        <field name="model">clinc.prescription</field>
        <field name="arch" type="xml">
            <tree string="prescription">
                       <field name="date"/>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
            </tree>
        </field>
    </record>

<record id="view_prescription_form" model="ir.ui.view">
    <field name="name">prescription.form</field>
    <field name="model">clinc.prescription</field>
    <field name="arch" type="xml">
        <form string="Prescription">
        <!-- add meds button -->
        <button name="%(clinic_managment.action_add_medicine_wizard)d"
        string="Ajouter un médicament"
        type="action"
        class="oe_highlight"/>
        <!-- remove meds button -->
        <button name="%(clinic_managment.action_reset_medicines_wizard)d"
        string="Réinitialiser Médicaments"
        type="action"
        class="oe_highlight"/>

            <sheet>
                <group>
                    <field name="date" readonly="1"/>
                    <field name="doctor_id"/>
                    <field name="patient_id"/>
                </group>

                <notebook>
                    <page string="Medicines">
                        <field name="medicines_ids">
                            <tree editable="top">
                                <field name="intake_date"/>
                                <field name="dosage"/>
                                <field name="instructions"/>
                                <field name="medication_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>



    <record id="action_prescription" model="ir.actions.act_window">
        <field name="name">prescriptions</field>
        <field name="res_model">clinc.prescription</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_medical_root" name="Medical Management"/>
    <menuitem id="menu_prescription" name="prescriptions" parent="menu_medical_root" action="action_prescription"/>
</odoo>