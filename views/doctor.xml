<odoo>
    <!-- Tree view (list of patients) -->
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">clinc.doctor</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="firstname"/>
                <field name="lastname"/>
                <field name="birthday"/>
                <field name="nationality"/>
                <field name="phone_number"/>
                <field name="specialite"/>

            </tree>
        </field>
    </record>

    <!-- Form view (details of one patient) -->
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">clinc.doctor</field>
        <field name="arch" type="xml">
            <form string="doctor">
                <sheet>
                    <group>
                      <group>
                        <field name="firstname"/>
                        <field name="lastname"/>
                        <field name="specialite"/>
                    </group>
                    <group>
                        <field name="nationality"/>
                        <field name="birthday"/>
                        <field name="phone_number"/>
                    </group>
                    </group>
                <notebook>
                <page string="Appointments">
                    <field name="appointment_ids">
                        <tree editable="top">
                            <field name="appointment_date"/>
                            <field name="patient_id"/>
                            <field name="reason"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </page>

                <page string="Prescriptions">
                    <field name="prescription_ids">
                        <tree editable="top">
                            <field name="date"/>
                            <field name="patient_id"/>
                        </tree>
                    </field>
                </page>
            </notebook>
                </sheet>
               
            </form>
        </field>
    </record>

<record id="view_doctor_search" model="ir.ui.view">
        <field name="name">doctor.search</field>
        <field name="model">clinc.doctor</field>
        <field name="arch" type="xml">
            <search string="Search Doctors">
                <field name="firstname"/>
                <field name="lastname"/>
                <field name="specialite" string="Speciality"/>
            </search>
        </field>
    </record>

    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">doctors</field>
        <field name="res_model">clinc.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_medical_root" name="Medical Management"/>
    <menuitem id="menu_doctor" name="doctors" parent="menu_medical_root" action="action_doctor"/>
</odoo>