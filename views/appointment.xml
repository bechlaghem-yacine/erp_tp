<odoo>
    <!-- Tree view (list of patients) -->
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">appointment.tree</field>
        <field name="model">clinc.appointment</field>
        <field name="arch" type="xml">
            <tree string="appointments">
                        <field name="appointment_date"/>
                        <field name="reason"/>
                        <field name="status"/>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view (details of one patient) -->
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">appointment.form</field>
        <field name="model">clinc.appointment</field>
        <field name="arch" type="xml">
            <form string="appointment">
                <sheet>
                    <group>
                        <field name="appointment_date"/>
                        <field name="reason"/>
                        <field name="status"/>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <record id="view_appointment_search" model="ir.ui.view">
        <field name="name">appointment.search</field>
        <field name="model">clinc.appointment</field>
        <field name="arch" type="xml">
            <search string="Search Appointments">
                <field name="doctor_id" string="Doctor"/>
                <field name="patient_id" string="Patient"/>
                
            </search>
        </field>
    </record>

    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">appointments</field>
        <field name="res_model">clinc.appointment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_medical_root" name="Medical Management"/>
    <menuitem id="menu_appointment" name="appointments" parent="menu_medical_root" action="action_appointment"/>
</odoo>