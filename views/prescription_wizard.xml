<odoo>
    <!-- Wizard Form -->
    <record id="view_create_prescription_wizard" model="ir.ui.view">
        <field name="name">create.prescription.wizard.form</field>
        <field name="model">clinc.create.prescription.wizard</field>
        <field name="arch" type="xml">
            <form string="Créer une prescription">
                <group>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                </group>

                <group string="Médicaments">
                    <field name="line_ids">
                        <tree editable="bottom">
                            <field name="medication_id"/>
                            <field name="posologie"/>
                            <field name="date_prise"/>
                        </tree>
                    </field>
                </group>

                <footer>
                    <button string="Créer"
                            type="object"
                            name="action_create_prescription"
                            class="btn-primary"/>

                    <button string="Annuler"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action that opens the wizard -->
    <record id="action_create_prescription_wizard" model="ir.actions.act_window">
        <field name="name">Créer une prescription</field>
        <field name="res_model">clinc.create.prescription.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
