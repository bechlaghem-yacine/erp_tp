<odoo>
    <record id="view_add_medicine_wizard_form" model="ir.ui.view">
        <field name="name">add.medicine.wizard.form</field>
        <field name="model">clinc.add.medicine.wizard</field>
        <field name="arch" type="xml">
            <form string="Ajouter un médicament">
                <group>
                    <field name="prescription_id" invisible="1"/>
                    <field name="medication_id"/>
                    <field name="posologie"/>
                    <field name="date_prise"/>
                </group>

                <footer>
                    <button string="Ajouter"
                            type="object"
                            name="add_medicine"
                            class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_add_medicine_wizard"
            model="ir.actions.act_window">
        <field name="name">Ajouter un médicament</field>
        <field name="res_model">clinc.add.medicine.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_prescription_id': active_id}</field>
    </record>
</odoo>
